        document.write("네트워크 연결 상태 : 끊어짐");
    }
    $.get('/emo/blockNumber', function(data){
            
            if(data.result == 'success'){
                $('#block-num-table').empty();
                $('#block-num-table').append("블록개수 : "+data.message.index+1+"<br>");
            }else{
                $('#block-num-table').empty();
                $('#block-num-table').append("블록개수 :  <br>");
